        "libs/github-searcher/user-search/shell/src/index.ts"
      ],
      "@github-searcher/github-searcher/user-search/feature-search-bar": [
        "libs/github-searcher/user-search/feature-search-bar/src/index.ts"
      ],
      "@github-searcher/github-searcher/user-search/ui-user-search": [
        "libs/github-searcher/user-search/ui-user-search/src/index.ts"
      ],
      "@github-searcher/github-searcher/user-search/ui-search-bar": [
        "libs/github-searcher/user-search/ui-search-bar/src/index.ts"
      ],
      "@github-searcher/github-searcher/user-search/data-access": [
        "libs/github-searcher/user-search/data-access/src/index.ts"
      ],
      "@github-searcher/github-searcher/user-search/feature-search-filters": [
        "libs/github-searcher/user-search/feature-search-filters/src/index.ts"
      ]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
